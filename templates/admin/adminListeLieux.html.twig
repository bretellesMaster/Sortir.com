{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/tableauScroll.css') }}">{% endblock %}
{% block title %}Gérer les lieux{% endblock %}

{% block body %}

    <div class="container">
        <div class="filtres">
            <h2>Gérer les lieux</h2>
            <form method="get" action="">
                <div>
                    <label for="inputSearch">Le nom contient: </label>
                    <div>
                        <input type="search" class="form-control" name="search">
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-lg btn-primary">Rechercher</button>
                </div>
            </form>
        </div>

        <div class="tableauSortie d-none d-lg-block">
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Lieu</th>
                    <th scope="col">Rue</th>
                    <th scope="col">Latitude</th>
                    <th scope="col">Longitude</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody class="tbody">
                {% for lieu in lieux %}
                    <tr>
                        <td>{{ lieu.nom }}</td>
                        <td>{{ lieu.rue }}</td>
                        <td>{{ lieu.latitude }}</td>
                        <td>{{ lieu.longitude }}</td>
                        <td>{{ lieu.ville.nom }}</td>
                        <td><a href="{{ path('adminModifLieux',{'id':lieu.id}) }}">Modifier</a> - <a href="">Supprimer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-primary" href="{{ path('adminAjoutLieux') }}" role="button">Ajouter</a>
            <a class="btn btn-primary" href="{{ path('main') }}" role="button">Retour</a>
        </div>
    </div>

{% endblock %}