{% extends 'base.html.twig' %}

{% block title %}GÃ©rer les sites{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path("filtreSites") }}" method="get">
            <label for="nom-search">Search the site:</label>
            <div class="gauche col-6 row">
                <div class="form-group row col-12">
                    <label for="inputEmail3" class="col-sm-6 col-form-label">Site : </label>
                    <div class="col-sm-6">
                        <select class="form-control" name="nom">
                            {% if sites is defined %}
                                {% for site in sites %}
                                    <option name="site" value="{{ site.id }}">{{ site.nom }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>

                    <button class="btn btn-primary buttonAdminSites" type="submit">Rechercher</button>
                </div>
            </div>

            <hr>

            <table class="table table-dark">
                <thead>
                <tr>
                    <th colspan="2">Villes</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for site in sites %}
                    <tr>
                        <td>{{ site.nom }}</td>
                        <td></td>
                        <td><a href="{{ path('adminSitesUpdate', {'id': site.id}) }}">Modifier</a></td>
                        <td><a href="{{ path('adminSitesDelete', {'id': site.id }) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>


            <div class="buttonUserDetails">
                <a class="btn btn-primary buttonUserDetails" href="{{ path ('adminSitesAdd') }}"
                   role="button">Ajouter</a>
            </div>
        </form>
    </div>
{% endblock %}