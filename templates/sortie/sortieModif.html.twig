{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(sortieForm) }}

        {{ form_label(sortieForm.nom) }}
        {{ form_widget(sortieForm.nom) }}

        {{ form_label(sortieForm.dateHeureDebut) }}
        {{ form_widget(sortieForm.dateHeureDebut) }}

        {{ form_label(sortieForm.dateLimiteInscription) }}
        {{ form_widget(sortieForm.dateLimiteInscription) }}


        {{ form_label(sortieForm.nbInscriptionsMax) }}
        {{ form_widget(sortieForm.nbInscriptionsMax) }}

        {{ form_label(sortieForm.duree) }}
        {{ form_widget(sortieForm.duree) }}

        {{ form_label(sortieForm.infosSortie) }}
        {{ form_widget(sortieForm.infosSortie) }}

        {{ form_label(sortieForm.lieu) }}
        {{ form_widget(sortieForm.lieu) }}

        <p>{{sortie.lieu.rue}}</p>
        <p>{{sortie.lieu.ville}}</p>
        <p>{{sortie.lieu.ville.codePostal}}</p>

        <div>
            <button class="btn btn-primary" type="submit" id="publication" name="publication" value="1" >Enregistrer</button>

            <button class="btn btn-primary" type="submit" id="publication" name="publication" value="2">Publier la sortie</button>

            <a class="btn btn-primary" href="{{ path('sortieDetailCancel', {'id': sortie.id}) }}" role="button">Annuler la sortie</a>

            <a class="btn btn-primary" href="{{ path('main') }}" role="button">Retour</a>
        </div>

        {{ form_end(sortieForm) }}

    </div>


